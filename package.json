{
  "name": "aetherium-desktop",
  "version": "1.2.0",
  "description": "Aetherium Chat Desktop Application",
  "main": "main.js",
  "author": "Aetherium",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.aetherium.chat",
    "productName": "Aetherium",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "overlay.html",
      "screen-picker.html",
      "resources/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeader": "resources/installer-header.bmp",
      "installerSidebar": "resources/installer-sidebar.bmp",
      "license": "LICENSE.txt",
      "shortcutName": "Aetherium",
      "uninstallDisplayName": "Aetherium",
      "artifactName": "Aetherium-Setup-${version}.${ext}",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "TheEtherWolf",
      "repo": "aetherium-desktop"
    }
  }
}
